@code{
    [Inject] CustomAuthStateProvider AuthProvider { get; set; }
    [Inject] NavigationManager Navigation { get; set; }

    async Task Logout()
    {
        await AuthProvider.MarkUserAsLoggedOut();
        Navigation.NavigateTo("/login", true);
    }
}