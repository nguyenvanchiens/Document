<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="header"><h2>@Title</h2></div>
                <div class="content">
                    @ChildContent
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}